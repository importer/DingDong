<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_folder_all"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:clickable="true"
        android:background="@drawable/bg_main_folder"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/iv_folder_all_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:background="@drawable/ic_folder_un_selected"
            android:src="@drawable/ic_folder_white_18dp"/>

        <TextView
            android:id="@+id/tv_folder_all_title"
            android:layout_width="130dp"
            android:layout_height="48dp"
            android:layout_marginLeft="24dp"
            android:layout_toRightOf="@id/iv_folder_all_icon"
            android:gravity="center_vertical"
            android:maxEms="9"
            android:maxLines="1"
            android:text="全部便签"
            android:textColor="@color/colorBlackAlpha87"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/tv_folder_all_count"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginLeft="24dp"
            android:layout_toRightOf="@id/tv_folder_all_title"
            android:gravity="center_vertical"
            android:textColor="@color/colorBlackAlpha54"
            android:textSize="14sp" />

    </RelativeLayout>

    <View
        android:id="@+id/view_folder_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorBlackAlpha12" />
    <TextView
        android:id="@+id/tv_folder_to_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        android:text="编辑便签夹"
        android:textColor="?attr/colorPrimaryDark"
        android:layout_marginLeft="14dp"
        android:layout_marginBottom="8dp"
        android:textSize="14sp"/>

</LinearLayout>